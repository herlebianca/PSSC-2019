@model MyPlanner.Models.User

@{
    ViewData["Title"] = "Profile";
}
<style>
    body {
        background: #1d9172;
        color: antiquewhite;
    }
</style>
<h1><font color="white">Profile</font></h1>
<body >
    <div>
       
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.first_name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.first_name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.last_name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.last_name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.age)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.other_ocupation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.other_ocupation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.phone_number)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.phone_number)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.username)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.rating_float)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.rating_float) <img src="~/Content/Images/star.png" width="22" height="22"/>
            </dd>

        </dl>
        <p><font color="white">Assigned to</font></p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <font color="white">
                            @Html.DisplayNameFor(model => model.MyTasks_asigned[0].Description)
                        </font>
                    </th>               
                    <th>
                        <font color="white">
                            @Html.DisplayNameFor(model => model.MyTasks_asigned[0].Tag)
                        </font>
                    </th>                 
                    <th>
                        <font color="white">
                            @Html.DisplayNameFor(model => model.MyTasks_asigned[0].Rating)
                        </font>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MyTasks_asigned)
                {
                    <tr>
                        <td>
                            <font color="white">
                                @Html.DisplayFor(modelItem => item.Description)
                            </font>
                        </td>
                   
                        <td>
                            <font color="white">
                                @Html.DisplayFor(modelItem => item.Tag)
                            </font>
                        </td>
                        <td>
                            <font color="white">
                                @Html.DisplayFor(modelItem => item.RatingFloat) <img src="~/Content/Images/star.png" width="22" height="22" />
                            </font>
                        </td>
                        <td>

                            <a asp-controller="MyTasks" asp-action="Edit" asp-route-id="@item.Id" asp-route-from_dashboard="no"><font color="white">Edit |</font></a>
                            <a asp-controller="MyTasks" asp-action="Details" asp-route-id="@item.Id"><font color="white">Details |</font></a>
                            <a asp-controller="MyTasks" asp-action="Delete" asp-route-id="@item.Id"><font color="white">Delete</font></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p><font color="white">Owner of</font></p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <font color="white">
                            @Html.DisplayNameFor(model => model.MyTasks_owner[0].Description)
                        </font>
                    </th>                 
                    <th>
                        <font color="white">
                            @Html.DisplayNameFor(model => model.MyTasks_owner[0].Tag)
                        </font>
                    </th>                   
                    <th>
                        <font color="white">
                            @Html.DisplayNameFor(model => model.MyTasks_owner[0].Rating)
                        </font>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MyTasks_owner)
                {
                    <tr>
                        <td>
                            <font color="white">
                                @Html.DisplayFor(modelItem => item.Description)
                            </font>
                        </td>                       
                        <td>
                            <font color="white">
                                @Html.DisplayFor(modelItem => item.Tag)
                            </font>
                        </td>
                        <td>
                            <font color="white">
                                @Html.DisplayFor(modelItem => item.RatingFloat) <img src="~/Content/Images/star.png" width="22" height="22" />
                            </font>
                        </td>
                        <td>

                            <a asp-controller="MyTasks" asp-action="Edit" asp-route-id="@item.Id" asp-route-from_dashboard="no"><font color="white">Edit |</font></a>
                            <a asp-controller="MyTasks" asp-action="Details" asp-route-id="@item.Id"><font color="white">Details |</font></a>
                            <a asp-controller="MyTasks" asp-action="Delete" asp-route-id="@item.Id"><font color="white">Delete</font></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id"><font color="white">Edit |</font></a>
        <a asp-action="Index"><font color="white">Back to List</font></a>
    </div>
</body>