@model MyPlanner.Models.User

@{
    ViewData["Title"] = "Create";
}
<style>
    .btnstyle{  background-color: #ff9966; 
                border-color: #ff9966;
    }
    .btnstyle:hover{ background-color: coral;
                     border-color:antiquewhite;
                     color: antiquewhite;
    }
</style>
<body style="background:#1d9172">
    <h1><font color="white">Register</font></h1>
    @using (Html.BeginForm("Create", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    @Html.AntiForgeryToken()
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="first_name" class="control-label"><font color="white">First Name</font></label>
                    <input asp-for="first_name" class="form-control" required/>
                    <span asp-validation-for="first_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="last_name" class="control-label"><font color="white">Last Name</font></label>
                    <input asp-for="last_name" class="form-control" required/>
                    <span asp-validation-for="last_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="age" class="control-label"><font color="white">Age</font></label>
                    <input asp-for="age" class="form-control" />
                    <span asp-validation-for="age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="other_ocupation" class="control-label"><font color="white">Other ocupation</font></label>
                    <input asp-for="other_ocupation" class="form-control" />
                    <span asp-validation-for="other_ocupation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="email" class="control-label"><font color="white">Email</font></label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="phone_number" class="control-label"><font color="white">Phone</font></label>
                    <input asp-for="phone_number" class="form-control" />
                    <span asp-validation-for="phone_number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="username" class="control-label"><font color="white">Username</font></label>
                    <input asp-for="username" class="form-control" required/>
                    <span asp-validation-for="username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="encrypted_password" class="control-label"><font color="white">Password</font></label>
                    <input asp-for="encrypted_password" class="form-control" type="password" required/>
                    <span asp-validation-for="encrypted_password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PictureFile" class="control-label"><font color="white">Upload your photo</font></label>
                    <input asp-for="PictureFile" type="file" name="PictureFile" required />
                    <span asp-validation-for="PictureFile"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary btnstyle" />
                </div>
            </form>
        </div>
    </div>

  
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>